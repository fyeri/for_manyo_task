<h1><%= t('.label_index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('labels.name') %></th>
      <th><%= t('.tasks') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.tasks.size %></td>

        <td><%= link_to t('labels.edit_label'), edit_label_path(label),class: "edit-label" %></td>
        <td><%= link_to t('labels.delete'), label, method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-label" %></td>
      </tr>
    <% end %>
  </tbody>
</table>  
  