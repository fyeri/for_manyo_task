<h1>ラベル編集ページ</h1>

<% if @label.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@label.errors.count, "error") %> prohibited this <%= @label.name %> from being saved:</h2>
    <ul>
    <% @label.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @label, local: true) do |f| %>
<div class="field">
  <%= f.label "名前"  %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.submit "更新する", id: "update-user" %>
</div>

<%= link_to "戻る" , labels_path(@label), id: "back" %>
<% end %>

