<p id="notice"><%= notice %></p>

<h1>ユーザ一覧ページ</h1>

 
<table>
  <thead>
    <tr>
      <th><%= "名前" %></th>
      <th><%= "メールアドレス" %></th>
      <th><%= "管理者権限" %></th>
      <th><%=  "タスク数" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "あり" : "なし" %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to "詳細" , admin_user_path(user), class: "show-user" %></td>
        <td><%= link_to "編集", edit_admin_user_path(user), class: "edit-user"%></td>
        <td><%= link_to "削除", admin_users_path, method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody> 
</table>