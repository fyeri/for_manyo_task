<h1><%= t('.user_index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.admin') %></th>
      <th><%= t('.tasks') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "あり" : "なし" %></td>
        <td><%= user.tasks.size %></td>
        <td><%= link_to t('.show_user') , admin_user_path(user), class: "show-user" %></td>
        <td><%= link_to t('.edit_user'), edit_admin_user_path(user), class: "edit-user"%></td>
        <td><%= link_to t('.delete_user'), admin_user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody> 
</table>