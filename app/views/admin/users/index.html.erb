<h1><%= t('.user_index') %></h1>


<style>
  .table tbody tr:last-child td {
    border-bottom: 1px solid #ddd; /* 必要に応じて色やスタイルを調整してください */
  }
</style>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('.name') %></th>
      <th scope="col"><%= t('.email') %></th>
      <th scope="col"><%= t('.admin') %></th>
      <th scope="col"><%= t('.tasks') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "あり" : "なし" %></td>
        <td><%= user.tasks.size %></td>
        <td><%= link_to t('.show_user') , admin_user_path(user), class: "show-user  btn btn-primary text-white" %></td>
        <td><%= link_to t('.edit_user'), edit_admin_user_path(user), class: "edit-user btn btn-primary text-white"%></td>
        <td><%= link_to t('.delete_user'), admin_user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-user btn btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody> 
</table>