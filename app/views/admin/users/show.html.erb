<h1>ユーザ詳細ページ</h1>

<tr>
<div class="field">
  </td><strong><%= "name" %></strong>
  <%= @user.name %></td><br>
</div>

  <div class="field">
    </td><strong><%= "email" %></strong>
    <%= @user.email %></td><br>
  </div>
  <div class="field">
    </td><strong><%= "管理者権限" %></strong>
    <td><%= @user.admin? ? "あり" : "なし"  %></td>
  </div>
</tr>

<table>
  <thead>
    <tr>
      <th><%= "タイトル" %></th>
      <th><%= "内容" %></th>
      <th><%= "作成日時" %></th>
      <th><%=  "終了期限" %></th>
      <th><%= "優先度" %></th>
      <th><%= "ステータス" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
      <tr>
    <% end %>
  </tbody> 
</table>
      
<%= link_to "戻る", admin_users_path, id: "back" %>
