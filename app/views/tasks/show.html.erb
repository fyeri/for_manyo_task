<p id="notice"><%= notice %></p>

<h1><%= t('.show_task') %></h1>

<p>
<tr>
<div class="field">
  <strong><%= t('.title') %></strong>
  <%= @task.title %></td><br>
</div>

<div class="field">
  <td><strong><%= t('.content') %></strong>
  <%= @task.content %></td><br>
</div>

<div class="field">
  <td><strong><%= t('.create_at') %></strong>
  <%= @task.created_at %></td>
</div>

<div class="field">
  <td><strong><%= t('.deadline_on') %></strong>
  <%= @task.deadline_on %></td>
</div>

<div class="field">
  <td><strong><%= t('.priority') %></strong>
  <%= @task.priority %></td>
</div>

<div class="field">
  <td><strong><%= t('.status') %></strong>
  <%= @task.status %></td>
</div>

<div class="field">
  <td><strong><%= t('.label') %></strong>
  <%= @task.labels.map(&:name).join(' ')  %></td>
</div>

</tr>
</p>


<%= link_to t('.edit'), edit_task_path(@task), id: "edit-task"  %> |
<%= link_to t('.back'), tasks_path, id: "back" %>